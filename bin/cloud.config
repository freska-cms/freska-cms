#cloud-config
coreos:
  units:
    - name: runcmd.service
      command: start
      content: |
        [Unit]
        Description=Set srv permissions
        
        [Service]
        Type=oneshot
        ExecStart=/bin/sh -c "chown core:core /srv"
    - name: freska.service
      command: start
      content: |
        [Unit]
        Description=Freska Server
        Documentation=https://www.nextbit.io
        After=network.target

        [Service]
        User=core
        CapabilityBoundingSet=CAP_NET_BIND_SERVICE
        AmbientCapabilities=CAP_NET_BIND_SERVICE
        NoNewPrivileges=true
        LimitNOFILE=1048576
        
        Environment="FRESKA_ENV=production"
        WorkingDirectory=/srv/freska
        ExecStart=/srv/freska/bin/freska-server
        Restart=always
        RestartSec=2
        TimeoutStartSec=10

write_files:
  - path: /etc/ssh/sshd_config
    permissions: 0600
    owner: root:root
    content: |
      # Use most defaults for sshd configuration.
      UsePrivilegeSeparation sandbox
      Subsystem sftp internal-sftp
      UseDNS no
      AllowUsers core
      PermitRootLogin no
      PasswordAuthentication no
      ChallengeResponseAuthentication no
