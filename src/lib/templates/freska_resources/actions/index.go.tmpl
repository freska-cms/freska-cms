package [[ .freska_resource ]]actions

import (
	"net/http"

	"github.com/freska/auth/can"
	"github.com/freska/mux"
	"github.com/freska/server"
	"github.com/freska/view"

	"github.com/freska/freska-cms/src/lib/session"
	"github.com/freska/freska-cms/src/[[ .freska_resources ]]"
)

// HandleIndex displays a list of [[ .freska_resources ]].
func HandleIndex(w http.ResponseWriter, r *http.Request) error {

	// Authorise list [[ .freska_resource ]]
	user := session.CurrentUser(w, r)
	err := can.List([[ .freska_resources ]].New(), user)
	if err != nil {
		return server.NotAuthorizedError(err)
	}

	// Get the params
	params, err := mux.Params(r)
	if err != nil {
		return server.InternalError(err)
	}

	// Build a query
	q := [[ .freska_resources ]].Query()

	// Order by required order, or default to id asc
	switch params.Get("order") {

	case "1":
		q.Order("created_at desc")

	case "2":
		q.Order("updated_at desc")

	default:
		q.Order("id asc")
	}

	// Filter if requested
	filter := params.Get("filter")
	if len(filter) > 0 {
		q.Where("name ILIKE ?", filter)
	}

	// Fetch the [[ .freska_resources ]]
	results, err := [[ .freska_resources ]].FindAll(q)
	if err != nil {
		return server.InternalError(err)
	}

	// Render the template
	view := view.NewRenderer(w, r)
	view.AddKey("currentUser", user)
	view.AddKey("filter", filter)
	view.AddKey("[[ .freska_resources ]]", results)
	return view.Render()
}
